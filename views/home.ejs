<html >
    <head>
      <title>
        <%= title %>
      </title>
      <script  src="https://kit.fontawesome.com/b3348ae33f.js"
          crossorigin="anonymous"
      ></script>
      <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@500&display=swap" rel="stylesheet">
 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
 <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
      <div>
    <i class="fa-regular fa-address-book add"></i><h1>Address Book</h1>

      </div>
    <div class="contact-container">
        <ul>
           <li class="create-contact">
            
               <form action="/create-contact" method="POST">
               <input type="text" name="name" placeholder="Enter name" required>
               <input type="number" name="phone" placeholder="Enter phone" required>
               <button class="add-c button" type="submit">ADD CONTACT</button>
               </form>

            <div class="flex-cont">
              <img class="icon" src="/images/create-c.png" alt="create-contact-icon">
              <p style="font-size: large;">Create new contact</p>
            </div> 
            </li>
        <% for (let i of contact_list){ %>         
           <li>
            <div class="flex-cont contacts">
               <p class="icon bg "><span><%= i.name.slice(0,1).toUpperCase() %></span></p>
               <p class="name"><%= i.name %></p>
               <p class="details" ><%= i.phone %></p>
                <div class="Delete_button">
                <a href="/delete-contact/?id=<%=i.id %>">
                  <i class="fas fa-window-close"></i>
                </a>
               </div></div>
              
           </li>
        <% } %>
        </ul>
    </div>






     <script src="/js/home .js"></script>
    </body>
</html>